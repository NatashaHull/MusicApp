<%= form_for(@album) do |f| %>
  <%= f.text_field :name %>
  <br>
  
  <%= f.collection_select :band_id, Band.all, :id, :name %>
  <br>
  
  <%= f.radio_button :live, "false" %>
  <%= f.label :live, "Studio", :value => "false" %>
  <br>
  
  <%= f.radio_button :live, "true" %>
  <%= f.label :live, "Live", :value => "true" %>
  <br>
  
  <%= f.number_field :year %>
  <br>

  <%= f.submit %>
<% end %>